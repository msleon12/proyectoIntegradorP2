<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />
	
	<title> <%=title%></title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/banner-perfumes3.jpg" alt="Banner de bannerPerfumes">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
				<!-- /Novedades -->
      		<% for(let i=0; i<4; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%=products[i].id%>">
						<figure class="product-box_image">
							<img src="<%= products[i].imagen %> " alt="<%= products[i].nombre%>">
						</figure>
						<article class="product-box_data">
							<h2><%=products[i].nombre%></h2>
							<p><%=products[i].descipcion %></p>
							<p>Comentarios: 12</p>
						</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div> <!-- Container grande-->
  
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
          <%for(let i=4; i<8; i++){ %>
            <div class="col-12 col-sm-6 col-lg-3">
              <section class="product-box">
                <a href="/products/id/<%=products[i].id%>">
                  <figure class="product-box_image">
                    <img src="<%= products[i].imagen %> " alt="<%= products[i].nombre%>">
                  </figure>
                  <article class="product-box_data">
                    <h2><%=products[i].nombre%></h2>
                    <p><%=products[i].descipcion %></p>
                    <p>Comentarios: 12</p>
                  </article>
                </a>
              </section>
            </div>
          <% } %>
	</div>
	<!-- /Más comentados -->

	<!-- Footer -->
	<%-include('./partials/footer') %>
	<!-- Footer -->
</body>	
</html>