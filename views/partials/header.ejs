
<!-- Header -->
<header class="main-header">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-5 col-md-2">
				<a href="/" class="main-header_home-link">
					<img src="/images/img-freresLogo.png"> <!-- Poner imagen del logo-->
				</a>
			</div>

			<div class="col-7 col-md-6">
				<form action="/products/results" method="GET" class="search-form">
					<button class="filter-button">
						<i class="fas fa-filter"></i>
						<ul class="filtros">
							<li><label for="todos"></label><input type="radio" id="todos" name="filtro" value="todos" checked>Todos</label></li>
							<li><label for="productos"><input type="radio" id="productos" name="filtro" value="productos">Productos</label></li>
							<li><label for="marcas"><input type="radio" id="marcas" name="filtro" value="marcas">Marcas</label></li>
							<li><label for="descripcion"><input type="radio" id="descripcion" name="filtro" value="descripcion">Descripción</label></li>
							<li><label for="users"><input type="radio" id="users" name="filtro" value="users">Usuarios</label></li>

						</ul>
					</button>
					<input type="text" name="search" value="" placeholder="Buscar productos, marcas y más" class="search-form_input">
					<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
				</form>	
			</div>

			<div class="col-12 col-md-4">
				<a href="/" class="main-header_credit-link">
					 Los mejores perfumes en un solo lugar.
				</a>
			</div>
		</div>

		<button class="btn-toggle-navbar">
			<i class="fas fa-bars"></i>
		</button>

		<nav class="main-navbar">
			<ul class="left-navbar">
				<li><a href="/">Todos los productos</a></li>
				<% if(locals.user){ %>
					<li><a href="/products/add">Agregar producto</a></li>
				<% } %>
			</ul>

			<ul class="right-navbar">
				<% if(locals.user) { %> 
					<a href="/users/myprofile/<%=locals.user.id%>"><li style="text-transform: uppercase;">
						Hola <%= locals.user.nombre %>!
					<li></a>
					<li>
						<form action="/users/logout" method="POST">
							<button class="logout" type="submit">
								<i class="fas fa-sign-in-alt"></i>
								Cerrar sesión
							</button>
						</form>			
					</li>
				<% } else{ %>
					<li>
						<a href="/users/register">
							<i class="far fa-address-card"></i>
							Crear cuenta
						</a>
					</li>
					<li>
						<a href="/users/login">
							<i class="fas fa-sign-in-alt"></i>
							Iniciar sesión
						</a>
					</li>
				<% } %>
				
				<li>
					<a href="/quienessomos">
						<i class="fas fa-users"></i>
						¿Quiénes somos?
					</a>
				</li>
			</ul>
		</nav>
	</div>
</header>