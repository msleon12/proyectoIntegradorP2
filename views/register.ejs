<%- include('./partials/links') %>
<body>
    <%- include('./partials/header') %>
    <h1 class="form-title"><%= title %></h1>
    <section class="form-section">

        <% if (locals.errors){ %> 
        <h4 class="error"><%= errors.message %> </h4>
        <% } %> 
        
        <form action="/users/register/store" method="POST" enctype="multipart/form-data">
            <div class="form-fields">
                <input type="text" placeholder="Nombre *" name="nombre" value="">
                <input type="text" placeholder="Apellido *" name="apellido" value="">
                <input type="text" placeholder = "Nombre de usuario * "name="username" value="">
                <div>
                    <input disabled type="text" placeholder="Imagen de perfil">
                    <input type="file" placeholder="Imagen de perfil" name="img-perfil" value=""> 
                </div>
                <div>
                    <input disabled type="text" placeholder="Fecha de nacimiento*">
                    <input type="date" placeholder="Fecha de nacimiento *" name="nacimiento" value="">
                </div>
                <input type="number" placeholder="DNI" name="dni" value="">
                <input type="number" placeholder="Celular" name="celular" value="">
                <input type="email" placeholder="E-mail *" name="email" value="">
                <input type="password" placeholder="Contraseña *" name="contrasenia" value="">
                <input type="password" placeholder="Repetir Contraseña *" name="repetirContrasenia" value="">             
            </div>

            <button type="submit" class="form-button">
                Enviar
            </button>
            
        </form>
    </section>
    <%- include('./partials/footer') %>
</body>
</html>