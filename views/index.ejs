<%- include('./partials/links') %>
<body>
    <!-- Header -->
    <%- include('./partials/header') %>
    <!-- Header -->

    <!-- Errores -->
   
    
    <!-- Banner -->
    <div id="carouselExampleIndicators" class="carousel slide banner" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="/images/banner-perfumes2.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/banner-perfumes4.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/banner-perfumes1.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="form-title">NOVEDADES</h2>
            </div>

            <% for(let i=0; i<8; i++){ %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="slider-box product-box">
                        <a href="/products/id/<%=products[i].id%>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= products[i].imagen %>" alt="<%= products[i].nombre%>">
                            </figure>
                            <article class="product-box_data">
                                <h2><%=products[i].nombre%></h2>
                                <a href="/users/myprofile/<%=products[i].usuario.id%>"><h3><%=products[i].usuario.nombre%> <%=products[i].usuario.apellido%></h3></a>
                                <p>Comentarios: <%=products[i].comentario.length%></p> 
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
        
        </div> <!-- Div class row -->
    </div> <!-- Div class container -->
    <!-- Novedades -->

    <!-- Más comentados -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="form-title">MÁS COMENTADOS</h2>
            </div>

            <%for(let i=2; i<10; i++){ %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="slider-box product-box">
                        <a href="/products/id/<%=products[i].id%>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= products[i].imagen %>" alt="<%= products[i].nombre%>">
                            </figure>
                            <article class="product-box_data">
                                <h2><%=products[i].nombre%></h2>
                                <a href="/users/myprofile/<%=products[i].usuario.id%>"><h3><%=products[i].usuario.nombre%> <%=products[i].usuario.apellido%></h3></a>
                                <p>Comentarios: <%=products[i].usuario.comentarios%></p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
        </div> <!-- Div class row -->
    </div> <!-- Div class container -->
    <!-- /Más comentados -->

    <!-- Footer -->
    <%-include('./partials/footer') %>
    <!-- Footer -->
   
</body>
</html>