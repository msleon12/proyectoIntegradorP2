
<!-- Header -->
<header class="main-header">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-5 col-md-2">
				<a href="/" class="main-header_home-link">
					<img src="/images/img-freresLogo.png"> <!-- Poner imagen del logo-->
				</a>
			</div>

			<div class="col-7 col-md-6">
				<form action="/products/results" method="GET" class="search-form">
					<input type="text" name="search" value="" placeholder="Buscar productos, marcas y más" class="search-form_input">
					<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>

				</form>
				<div>
					<input class= "botonFiltro" type="radio" name="" id="Todos" value="Todos">
					<label class="filtros" for="Todos">Todos</label>
				</div>

			
			</div>

			<div class="col-12 col-md-4">
				<a href="/" class="main-header_credit-link">
					 Los mejores perfumes en un solo lugar.
				</a>
			</div>
		</div>

		<button class="btn-toggle-navbar">
			<i class="fas fa-bars"></i>
		</button>

		<nav class="main-navbar">
			<ul class="left-navbar">
				<li><a href="/">Todos los productos</a></li>
				<li><a href="/products/marcas">Marcas</a></li>
				<% if(locals.nombre){ %>
					<li><a href="/products/add">Cargar productos</a></li>
				<% } %>
			</ul>

			<ul class="right-navbar">
				<% if(locals.nombre) { %> 
					<a href="/users/myprofile/<%=locals.id%>"><li style="text-transform: uppercase;">
						Hola <%= locals.nombre %>!
					<li></a>
					<li>
						<form action="/users/logout" method="POST">
							
							<button type="submit">
								<i class="fas fa-sign-in-alt"></i>
								Cerrar sesión

							</button>
						</form>
							
					</li>
				<% } else{ %>
					<li>
						<a href="/users/register">
							<i class="far fa-address-card"></i>
							Crear cuenta
						</a>
					</li>
					<li>
						<a href="/users/login">
							<i class="fas fa-sign-in-alt"></i>
							Iniciar sesión
						</a>
					</li>
				<% } %>
				
				<li>
					<a href="/quienessomos">
						<i class="fas fa-users"></i>
						¿Quiénes somos?
					</a>
				</li>
			</ul>
		</nav>
	</div>
</header>