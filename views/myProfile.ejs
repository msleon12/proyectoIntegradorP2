<%- include('./partials/links') %>
<body>
    <%- include('./partials/header') %>

    <!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="profile-title">
			<h1><%= title %></h1>
			<h2>Editar perfil</h2>
			<a href="/users/editprofile/<%= resultado.id %> "><i class="fas fa-user-edit"></i></a>
		</div>
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src= "/images/perfiles<%=resultado.imagen %>" alt="Foto de " <%=resultado.nombre %>>
				<%= console.log(resultado.imagen) %>
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> 
						<%= resultado.nombre %>
						<%= resultado.apellido %>
					</h1>
				</div>
				<div>
					<ul class="info-usuario">
						<a href="/products/productosUsuario/<%= resultado.id %>"><li> <%=resultado.producto.length %> productos</li></a>
						<li> 22 seguidores </li>
						<li> <%= resultado.comentario.length %> comentarios</li>
					</ul>
				</div>
				<% if (locals.nombre== resultado.nombre && locals.apellido==resultado.apellido){ %> 
					<div>
						<form action="/users/destroy/<%= resultado.id %> " method="POST">
							<button class= 'btn' type="submit">BORRAR USUARIO</button>
						</form>
					</div>
					
				<% } else { %> 
					<div>
						<form action="/" method="POST">
							<button class= 'btn' type="submit">SEGUIR</button>
						</form>
					</div>
				<% } %> 
				
			</div>
		</div>
	</section>
	
	<!-- Mis productos -->
	
    
    <%- include('./partials/footer') %>
    
</body>
</html>